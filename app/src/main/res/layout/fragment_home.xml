<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/home_guideline"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp">
                <com.fxxkywcx.nostudy.ui.home.ADsFlipper
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/home_viewFlipper"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/translucent_black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:text="测试广告内容"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/home_flipperText"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="选课"
                    android:layout_margin="3dp"
                    android:id="@+id/home_chooseCourse"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/home_sign"
                    app:layout_constraintStart_toStartOf="parent"
                    android:onClick="JumpToChooseCourse"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="签到"
                    android:layout_margin="3dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/home_resDownload"
                    app:layout_constraintStart_toEndOf="@id/home_chooseCourse"
                    android:id="@+id/home_sign"
                    android:onClick="JumpToSign"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="资源下载"
                    android:layout_margin="3dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/home_sign"
                    app:layout_constraintEnd_toStartOf="@id/home_chat"
                    android:id="@+id/home_resDownload"
                    android:onClick="JumpToResourceDownload"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="留言板"
                    android:layout_margin="3dp"
                    android:id="@+id/home_chat"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/home_resDownload"
                    android:onClick="JumpToChat"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="考试"
                    android:layout_margin="3dp"
                    android:id="@+id/home_exam"
                    app:layout_constraintEnd_toStartOf="@id/home_homework"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:onClick="JumpToExam"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="作业"
                    android:layout_margin="3dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/home_score"
                    app:layout_constraintStart_toEndOf="@id/home_exam"
                    android:id="@+id/home_homework"
                    android:onClick="JumpToHomework"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="成绩\n查询"
                    android:layout_margin="3dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/home_homework"
                    app:layout_constraintEnd_toStartOf="@id/home_warning"
                    android:id="@+id/home_score"
                    android:onClick="JumpToScore"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="预警\n信息"
                    android:layout_margin="3dp"
                    android:id="@+id/home_warning"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/home_score"
                    android:onClick="JumpToWarning"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_toDoList"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_notification"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>