<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/home_guideline"
        app:layout_constraintTop_toTopOf="parent">
        <com.fxxkywcx.nostudy.ui.home.ADsFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_viewFlipper"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/translucent_black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:text="测试广告内容"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/home_flipperText"
                android:layout_gravity="center"/>
        </FrameLayout>
    </RelativeLayout>


    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="329dp"
        android:id="@+id/home_guideline"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="批准\n选课"
        android:layout_margin="3dp"
        android:id="@+id/home_chooseCourse"
        app:layout_constraintTop_toTopOf="@+id/home_guideline"
        app:layout_constraintEnd_toStartOf="@id/home_sign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home_guideline2"
        android:onClick="JumpToChooseCourse"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="发起\n签到"
        android:layout_margin="3dp"
        app:layout_constraintTop_toTopOf="@+id/home_guideline"
        app:layout_constraintBottom_toBottomOf="@id/home_guideline2"
        app:layout_constraintEnd_toStartOf="@id/home_resDownload"
        app:layout_constraintStart_toEndOf="@id/home_chooseCourse"
        android:id="@+id/home_sign"
        android:onClick="JumpToSign"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="资源\n上传"
        android:layout_margin="3dp"
        app:layout_constraintTop_toTopOf="@+id/home_guideline"
        app:layout_constraintStart_toEndOf="@id/home_sign"
        app:layout_constraintBottom_toBottomOf="@id/home_guideline2"
        app:layout_constraintEnd_toStartOf="@id/home_chat"
        android:id="@+id/home_resDownload"
        android:onClick="JumpToResourceDownload"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="发布\n任务"
        android:layout_margin="3dp"
        android:id="@+id/home_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_guideline"
        app:layout_constraintBottom_toBottomOf="@id/home_guideline2"
        app:layout_constraintStart_toEndOf="@+id/home_resDownload"
        android:onClick="JumpToChat"/>

    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="437dp"
        android:id="@+id/home_guideline2"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="批改\n考试"
        android:layout_margin="3dp"
        android:id="@+id/home_exam"
        app:layout_constraintTop_toTopOf="@+id/home_guideline2"
        app:layout_constraintEnd_toStartOf="@id/home_homework"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home_guideline3"
        android:onClick="JumpToExam"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="批改\n作业"
        android:layout_margin="3dp"
        app:layout_constraintTop_toTopOf="@+id/home_guideline2"
        app:layout_constraintBottom_toBottomOf="@id/home_guideline3"
        app:layout_constraintEnd_toStartOf="@id/home_warning"
        app:layout_constraintStart_toEndOf="@id/home_exam"
        android:id="@+id/home_homework"
        android:onClick="JumpToHomework"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="发起\n预警"
        android:layout_margin="3dp"
        android:id="@+id/home_warning"
        app:layout_constraintEnd_toStartOf="@id/home_announcement"
        app:layout_constraintTop_toTopOf="@+id/home_guideline2"
        app:layout_constraintBottom_toBottomOf="@id/home_guideline3"
        app:layout_constraintStart_toEndOf="@id/home_homework"
        android:onClick="JumpToWarning"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="发起公告"
        android:layout_margin="3dp"
        android:id="@+id/home_announcement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_guideline2"
        app:layout_constraintBottom_toBottomOf="@id/home_guideline3"
        app:layout_constraintStart_toEndOf="@id/home_warning"
        android:onClick="JumpToAnnouncement"/>

    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="537dp"
        android:id="@+id/home_guideline3"/>

</androidx.constraintlayout.widget.ConstraintLayout>